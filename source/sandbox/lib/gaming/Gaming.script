#-----------------------------------------  Game Classes --------------------------------

Man = fun (config)
  {
    config.speed = 1.0;
    new_object =  [] | global.Man | global.Object(config);
    new_object.class = "Man";
    local.config.filename = "man/walking-right/man-";
    local.config.frames_number = 9;
    new_object.animations[0] = SpriteAnimation(local.config);
    new_object.animations[0].LoadImages();
    new_object.PlayAnimation(0);
    return new_object;
  } | [];

